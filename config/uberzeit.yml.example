development:
  auth_providers:
    - provider: 'password'
    - provider: 'developer'
      fields:
        - 'email'
      uid_field: 'email'
  ubertrack_hosts:
    redmine: 'http://redmine.dev'
    otrs: 'http://10.10.10.17'
    stats: 'http://10.10.10.12'

