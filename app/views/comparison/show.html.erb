<%= render(partial: 'shared/user_select', locals: { link_generator: :user_comparison_path, selected_user: @user }) %>

<div class="row">
  <div class="large-12 columns">
    <h1><%= t('.title', week: @range.min.cweek) %></h1>

    <div class="timesheet week-view row">
      <div class="large-12 columns head">
        <div class="large-8 columns left">
          <%= l @range.min, format: :long %> - <%= l @range.max, format: :long %>
        </div>
        <div class="large-4 columns right">

          <div class="table-cell">
            <% if @date + 1.week <= Date.today %>
              <%= link_to fa_icon('caret-right'), url_for(date: @date + 1.week), class: 'next' %>
            <% else %>
              <span class="next"><%= fa_icon 'caret-right' %></span>
            <% end %>
          </div>
          <div class="table-cell">
            <%= link_to fa_icon('caret-left'), url_for(date: @date - 1.week), class: 'previous' %>

          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <div id="chart" data-time-entries="<%= @data_points[:time_entries].to_json %>" data-activities="<%= @data_points[:activities].to_json %>">
          <svg style="height:400px"> </svg>
        </div>
      </div>
    </div>
  </div>
</div>
