<%= form_for(@public_holiday) do |f| %>
<div class="row">
  <div class="small-4 columns">
    <%= f.text_field :name %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= datefield(f, :date, t('.date'), @public_holiday.date, :date) %>
  </div>
</div>

<div class="row">
  <div class="small-4 columns">
    <%= f.select :daypart, [[t('whole_day'), :whole_day], [t('first_half_day'), :first_half_day], [t('second_half_day'), :second_half_day]] %>
  </div>
</div>

<div class="row">
  <div class="small-3 columns">
    <%= f.submit class: 'button'%>
  </div>
  <div class="small-2 columns end">
    <%= link_to t('.back'), public_holidays_path, class: "secondary button" %>
  </div>
</div>
<% end %>

