<div class="footer container">
  <div class="row">
    <div class="small-8 small-offset-2 columns alert-box secondary">
      <%= t '.info-rule' %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      v<%= Uberzeit::Application.version.normal %> |
      <% if I18n.locale == :de %>
        <%= link_to 'English', language_session_path(language: 'en'), method: :put %>
      <% else %>
        <%= link_to 'Deutsch', language_session_path(language: 'de'), method: :put %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      nine.ch - from dev-team with <%= fa_icon('heart', class: 'api-show-token') %>
      <div class='api-token-popup'>
        <span class='token'>
          <p>This is a gift...</p>
          <p>Don't tell anyone..</p>
          <p>Your API Token is</p>
          <p><strong><%= current_user && current_user.authentication_token %></strong></p>
        </span>
        <%= fa_icon('heart') %>
      </div>
    </div>
  </div>

</div>
