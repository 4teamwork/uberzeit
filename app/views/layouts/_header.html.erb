<nav class="top-bar">
  <ul class="title-area">
    <li class="name"><!-- Leave this empty --></li>
    <li class="toggle-topbar menu-fa_icon"><a href="#"><span><%= t '.menu' %></span></a></li>
  </ul>
  <section class="top-bar-section">
    <% if signed_in? %>
      <%= render_navigation level: 1 %>
      <ul class="right">
        <li class="has-dropdown">
        <a href="#">
          <%= current_user %>
        </a>
        <ul class="dropdown">
          <% current_user.when_editable do %>
            <li>
              <%= link_to t('.change_password'), edit_user_password_path(current_user) %>
            </li>
          <% end %>
          <li>
            <%= link_to t('.logout'), logout_path %>
          </li>
        </ul>
        </li>
      </ul>
    <% end %>
  </section>
</nav>
<div class="container subnavigation">
  <div class="row">
    <div class="small-12 columns">
      <%= render_navigation(level: 2) %>
    </div>
  </div>
</div>
