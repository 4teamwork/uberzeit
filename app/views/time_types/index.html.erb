<div class="content-time-types row">
  <div class="large-12 columns">
    <h1>
      <%= TimeType.model_name.human %>
      <%= link_to fa_icon('plus') + ' ' + t('.new_time_type'), new_time_type_path, class: 'button right' %>
    </h1>

    <table class="nice small-12 edit destroy">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th><%= TimeType.human_attribute_name :name %></th>
          <th><%= TimeType.human_attribute_name :acquired_as %></th>
          <th><%= TimeType.human_attribute_name :bonus_calculator %></th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
      <% @time_types.each do |time_type| %>
      <tr>
        <td><%= icon_for_time_type(time_type) %></td>
        <td><%= time_type.name %></td>
        <td><%= t(".#{time_type.kind}") %></td>
        <td>
          <% unless time_type.bonus_calculator.blank? %>
            <span class="has-tip" data-tooltip="<%= t("bonus_calculator.#{time_type.bonus_calculator}.description") %>"><%= t("bonus_calculator.#{time_type.bonus_calculator}.name") %></span>
          <% end %>
        </td>
        <td>
          <%= link_to fa_icon('edit'), edit_time_type_path(time_type), { title: t('global.actions.edit') } %>
        </td>
        <td>
          <%= link_to fa_icon('trash'), time_type, method: :delete, confirm: t('.confirm_delete'), title: t('global.actions.delete') %>
        </td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
