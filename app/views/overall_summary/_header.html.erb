<div class="row">
  <div class="small-12 columns">
   <h1><%= title %> <small><%= unit%></small></h1>

    <%= form_tag "/summaries/vacation", method: :get do %>
    <div class="row">
      <div class="small-5 columns">

        <div class="row">
          <div class="small-3 columns"><%= t '.users' %></div>
          <div class="small-9 columns end"><%= select_tag :team, "<option value=\"\">#{t('.everyone')}</option>".html_safe + options_from_collection_for_select(@teams, :id, :name, @team ? @team.id : nil) %></div>
        </div>

        <div class="row">
          <div class="small-3 columns"><%= t '.time_frame' %></div>
          <div class="small-4 columns"><% if @view == :month %><%= select_month(@month_as_date) %><% end %></div>
          <div class="small-5 columns end"><%= select_year(@year, start_year: Date.current.year-1, end_year: Date.current.year+1) %></div>
        </div>

        <div class="row">
          <div class="small-12 columns">
            <%= hidden_field_tag :view, @view %>
            <%= submit_tag t('.show'), class: 'tiny button' %>
          </div>
        </div>
      </div>
      <div class="small-7 columns end">
        <dl class="sub-nav view-buttons">
          <dd <%= 'class=active' if @view == :month %>>
            <%= link_to t('.month'), path.call(view: :month, date: { year: @year, month: @month }, team: @team) %>
          </dd>
          <dd <%= 'class=active' if @view == :year %>>
            <%= link_to t('.year'), path.call(view: :year, date: { year: @year, month: @month }, team: @team) %>
          </dd>
        </dl>
      </div>
    </div>
    <% end %>
  </div>
</div>
