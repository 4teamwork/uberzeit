<div class="row">
  <div class="small-12 columns">
    <%= f.label :customer, class: 'left' %>
    <%= f.collection_select :customer_id, @customers, :id, :name %>
  </div>
</div>

<div class="row"<%= ' style="display: none"'.html_safe unless @projects %>>
  <div class="small-12 columns">
    <%= f.label :project, class: 'left' %>
    <%= f.collection_select :project_id, @projects, :id, :name %>
  </div>
</div>

<div class="row">
  <div class="small-12 columns">
    <%= f.label :activity_type, class: 'left' %>
    <%= f.collection_select :activity_type_id, @activity_types, :id, :name %>
  </div>
</div>

<div class="row">
  <div class="small-10 columns">
    <%= f.text_field :duration, label: t('.duration') %>
  </div>
</div>

<div class="row">
  <div class="small-10 columns">
    <%= datefield(f, :date, t('.date'), f.object.date, :date) %>
  </div>
</div>

<div class="row">
  <div class="small-5 columns">
    <%= f.text_field :redmine_ticket_id, label: t('.redmine_ticket') %>
  </div>
  <div class="small-5 columns">
    <%= f.text_field :otrs_ticket_id, label: t('.otrs_ticket') %>
  </div>
  <div class="small-2 columns">
    &nbsp;
  </div>
</div>

<div class="row">
  <div class="small-10 columns">
    <%= f.text_area :description, label: t('.description') %>
  </div>
</div>


<div class="row">

  <div class="small-12 columns">
  <%= f.submit t('.save'), id: 'time_entry_submit', class: 'primary medium button' %>
  <%= link_to t('.cancel'), '#', class: 'close-reveal-modal link' %>
  <% if @activity && @activity.persisted? %>
    <%= link_to t('.delete'), user_activity_path(@user, @activity), method: :delete, remote: true, class: 'delete-activity-link' %>
  <% end %>

</div>

