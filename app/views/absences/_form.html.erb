<%= f.hidden_field :time_type_id %>

<div class="row">
  <div class="small-12 columns">
    <%= f.select :time_type_id, options_from_collection_for_select(@time_types, :id, :name, f.object.time_type_id), label: t('.time_type') %>
  </div>
</div>

<div class="row from_to_date">
  <div class="small-6 columns">
    <%= datefield(f, :start_date, t('.start_date'), f.object.start_date, :from_date) %>
  </div>
  <div class="small-6 columns">
    <%= datefield(f, :end_date, t('.end_date'), f.object.end_date, :to_date) %>
  </div>
</div>


<div class="row">
  <div class="small-12 columns">
    <%= f.select :daypart, {t('whole_day') => :whole_day, t('first_half_day') => :first_half_day, t('second_half_day') => :second_half_day}, label: t('.daypart') %>
  </div>
</div>

<%= render 'absences/schedule_sub_form', main_form: f %>

<div class="row">
  <div class="small-12 columns">
    <%= f.submit class: 'button' %>
    <% if f.object.persisted? %>
      <%= link_to t('.delete'), user_absence_path(f.object.user_id, f.object), method: :delete, class: 'absence-delete-link' %>
    <% end %>
  </div>
</div>
