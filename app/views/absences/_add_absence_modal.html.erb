<div id="add-absence-modal" class="medium reveal-modal">
  <div class="row">
    <div class="small-12 columns">
      <h2><%= t('.add_absence') %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= select :shared, :time_type, options_for_select(@time_types.map { |time_type| [time_type.name, time_type.id, {:'data-type' => time_type.type_for_entries}]}), include_blank: true %>
    </div>
  </div>
  <%= form_for [@time_sheet, @date_entry], html: {class: 'hide', id: 'date_entry_form'} do |f| %>
    <%= render partial: 'date_entries/absence_form', locals: {f: f} %>
  <% end %>

  <%= form_for [@time_sheet, @time_entry], url: time_sheet_absence_time_entries_path(@time_sheet), html: {class: 'hide', id: 'time_entry_form'} do |f| %>
    <%= render partial: 'time_entries/absence_form', locals: {f: f} %>
  <% end %>
  <a class="close-reveal-modal">&#215;</a>
</div>
