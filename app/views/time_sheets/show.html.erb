<h1>Timesheet</h1>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Start</th>
    <th>End</th>
    <th>Duration</th>
    <th>Type</th>
    <th></th>
  </tr>

<% @sheet.single_entries.each do |entry| %>
  <tr>
    <td><%= entry.start_time %></td>
    <td><%= entry.end_time %></td>
    <td><%= distance_of_time_in_words entry.duration %></td>
    <td><%= entry.time_type %></td>
    <td><%= link_to 'Edit', edit_time_sheet_single_entry_path(@sheet, entry) %></td>
    <td><%= link_to 'Destroy', [@sheet, entry], :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Single Entry', new_time_sheet_single_entry_path(@sheet) %>