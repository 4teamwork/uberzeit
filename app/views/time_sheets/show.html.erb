<div class="row">
  <div class="large-12 columns">
    <div class="timesheet">
      <div class="head">
        <%= l @weekdays.first, :format => :long %> â€“ <%= l @weekdays.last, :format => :long %>
        <div class="right">
          <a href="<%= url_for(action: :show, date: @previous_week_day.to_formatted_s(:iso)) %>"><span class="icon-caret-left"></span></a>
          <a href="<%= url_for(action: :show, date: @next_week_day.to_formatted_s(:iso)) %>"><span class="icon-caret-right"></span></a>
        </div>
      </div>
      <div class="weekdays">
        <ul>
          <% @weekdays.each do |weekday| %>
            <li>
              <a href="<%= url_for(action: :show, date: weekday.to_formatted_s(:iso)) %>" class="<%= 'active' if weekday == @day %>">
                <span class="day">
                  <%= l weekday, format: '%A' %>
                  <% if @absences[weekday] %>
                    <i class="icon-sign-blank event-color<%=color_index_of_element(@absences[weekday])%>"></i>
                  <% end %>
                  <% if @public_holidays[weekday] %>
                    <i class="icon-sign-blank public-holiday-color"></i>
                  <% end %>
                </span>
                <br>
                <span class="time"><%= worktime_for_day(weekday) %></span>
              </a>
            </li>
          <% end %>
          <li class="weeksummary">
            <div>
              <span class="total"><%= t '.total' %></span>
              <br>
              <span class="time"><%= worktime_for_week(@week) %></span>
            </div>
          </li>
        </ul>
      </div>
      <div class="entries">
        <% if @time_chunks[:absence].length > 0 || @time_chunks[:work].length > 0 || @timer_active || @public_holidays[@day] %>
        <ul>
          <!-- PUBLIC HOLIDAYS -->
          <% if @public_holiday %>
            <li>
              <i class="icon-sign-blank public-holiday-color"></i><%= @public_holiday.name %>
              <div class="right">
                <small><%= part_of_day(@public_holiday) %></small>
              </div>
            </li>
          <% end %>
          <!-- ABSENCES -->
          <% @time_chunks[:absence].each do |time_chunk| %>
            <li>
              <i class="icon-sign-blank event-color<%=color_index_of_element(time_chunk)%>"></i><%= time_chunk.time_type %>
              <div class="right">
                <small><%= part_of_day(time_chunk) %></small>
              </div>
            </li>
          <% end %>
          <!-- WORK -->
          <% @time_chunks[:work].each do |time_chunk| %>
            <li>
              <%= l time_chunk.starts %> - <%= l time_chunk.ends %>
              <small>
                <%= time_chunk.time_type %>
                <% unless standard_calculation?(time_chunk.time_type) %>
                (<%= time_type_calculation_percentage(time_chunk.time_type) %>)
                <% end %>
              </small>
              <div class="right">
                <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_time_sheet_time_entry_path(@time_sheet, time_chunk.parent), remote: true, class: 'edit-time-entry-link' %>
                <%= format_duration(time_chunk.duration_for_calculation) %>
              </div>
            </li>
          <% end %>
          <% if @timer_active %>
          <li>
            <%= @timer.from_time %> -
            <small><%= @timer.time_type %></small>
            <div class="right">
              <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_time_sheet_timer_path(@time_sheet, @timer), remote: true, class: 'edit-time-entry-link' %>
              <a href="<%= url_for(action: :stop_timer) %>" data-method="put" data-remote="true" class="stop-timer">
                <i class="icon-repeat icon-spin"></i>
                 Stop
              </a>
              <span class="timer-current" data-start="<%= @timer.from_time %>"></span>
            </div>
          </li>
        <% end %>
        </ul>
        <% else %>
          <div class="no-entries-message">
            <p>
              <%= t '.no_entries_yet_message' %>
              <br>
              <a href="#" data-reveal-id="add-time-modal"><%= t '.add_time_now' %></a>
            </p>
          </div>
        <% end %>
      </div>
    </div>
    <%= render 'add_time_modal' %>
    <%= render 'edit_time_modal' %>
  </div>
</div>
<% if @legend_show_public_holiday || @legend_time_types.any? %>
<div class="row">
  <div class="small-12 columns">
    <%= render 'shared/event_legend', show_public_holiday: @legend_show_public_holiday, time_types: @legend_time_types  %>
  </div>
</div>
<% end %>

