<div id="content-summary" class="row">
  <h3><%= t '.summary' %> <%=2013%></h3>

  <div class="small-6 columns">
    <table class="summary">
      <thead>
        <tr class="header">
          <th colspan="5">
            <% if @time_type.nil? %>
              <%= t '.total_work_time_in_hours' %>
            <% else %>
              <%= t('.only_type_in_hours', type: @time_type.name) %>
            <% end %>
          </th>
        </tr>
        <tr class="subheader">
          <th>&nbsp;</th>
          <th class="value"><%= t '.actual' %></th>
          <th class="value"><%= t '.target' %></th>
          <th class="value">&Delta;</th>
          <th class="value">&Sigma;</th>
        </tr>
      </thead>
      <tbody>
        <% @summary.each_with_index do |summary, index| %>
        <tr>
          <td><%= link_to summary[:name], action: 'weekly_summary', year: @year, month: index + 1, remote: true %></td>
          <td><%= format_hours(summary[:worked]) %></td>
          <td><%= format_hours(summary[:planned]) %></td>
          <td><%= format_hours(summary[:overtime]) %></td>
          <td><%= format_hours(summary[:sum]) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="small-6 columns end">
    <div id="summary_table">

    </div>
  </div>
</div>
