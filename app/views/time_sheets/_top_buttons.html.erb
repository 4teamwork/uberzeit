<div class="top-buttons">
  <% if @timer && @timer.start_date.to_date != @day %>
  <a href="<%= url_for(action: :show, date: @timer.start_date.to_date) %>" class="button"><i class="icon-spin icon-repeat"></i> <%= t '.jump_to_timer' %></a>
  <% end %>
  <a href="#" class="button" data-reveal-id="add-time-modal"><i class="icon-plus"></i> <%= t '.add_time' %></a>
</div>
