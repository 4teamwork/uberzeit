<div class="content-summary row">
  <div class="small-12 columns">
    <table class="nice small-12">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th class="value work"><%= t 'summaries.works.columns.effective_worked' %></th>
          <th class="value work"><%= t 'summaries.works.columns.absent' %></th>
          <th class="value work"><%= t 'summaries.works.columns.time_bonuses' %></th>
          <th class="value work"><%= t 'summaries.works.columns.target' %></th>
          <th class="value work"><%= t 'summaries.works.columns.overtime' %></th>
          <th class="value work"><%= t 'summaries.works.columns.running_overtime' %></th>
        </tr>
      </thead>
      <tbody>
        <% @entries.each do |entry| %>
        <tr class="summary-row" data-month="<%=entry[:range].min.month%>" <% if @year == Date.current.year && entry[:range].min.month > Date.current.month %>style="display: none;"<% end %>>
          <td><%= link_to label_for_month(entry[:range].min), entry[:link], remote: true %></td>
          <% tooltip_effective_worked = types_to_tooltip_table(entry[:effective_worked_by_type]) %>
          <% tooltip_absent = types_to_tooltip_table(entry[:absent_by_type]) %>
          <td><span <% unless tooltip_effective_worked.blank? %>class="has-tip" data-tooltip="<%=tooltip_effective_worked%>"<% end %>><%= format_hours(entry[:effective_worked]) %></span></td>
          <td><span <% unless tooltip_absent.blank? %>class="has-tip" data-tooltip="<%=tooltip_absent%>"<% end %>><%= format_hours(entry[:absent]) %></span></td>
          <td><%= format_hours(entry[:time_bonus]) %></td>
          <td><%= format_hours(entry[:planned_work]) %></td>
          <td><%= format_hours(entry[:overtime]) %></td>
          <td><%= format_hours(entry[:running_overtime]) %></td>
        </tr>
        <% end %>
        <% if @entries.any? { |entry| @year == Date.current.year && entry[:range].min.month > Date.current.month } %>
        <tr class="expand-row">
          <td colspan="6"><a href="#" class="unhider" data-unhide-class="summary-row" data-hide-class="expand-row" title="<%= t '.expand' %>"><i class='icon-chevron-down'></i></a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
