<%= form_for([@user,@employment]) do |f| %>
  <% if f.object.errors.present? %>
    <div class="alert-box alert">
      <%= f.object.errors.full_messages.join('<br/>').html_safe %>
    </div>
  <% end %>

  <div class="row">
    <div class="small-2 columns">
      <%= f.text_field :workload %>
    </div>
  </div>

  <div class="row from_to_date">
    <div class="small-6 columns">
      <%= datefield(f, :start_date, Employment.human_attribute_name(:start_date), f.object.start_date, :from_date) %>
    </div>

    <div class="small-6 columns">
      <%= datefield(f, :end_date, Employment.human_attribute_name(:end_date), f.object.end_date, :to_date) %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.submit class: 'button' %>
      <%= link_to t('.back'), user_path(@user), class: 'button secondary' %>
    </div>
  </div>
<% end %>
