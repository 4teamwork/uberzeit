<%= f.hidden_field :time_type_id %>

<div class="row">
  <div class="small-3 columns">
    <%= f.label :start_date %>
    <%= f.text_field :start_date, class: :date %>
  </div>
  <div class="small-3 columns">
    <%= f.label :start_time %>
    <%= f.text_field :start_time, class: :time %>
  </div>
  <div class="small-3 columns">
    <%= f.label :end_date %>
    <%= f.text_field :end_date, class: :date %>
  </div>
  <div class="small-3 columns">
    <%= f.label :end_time %>
    <%= f.text_field :end_time, class: :time %>
  </div>
</div>

<%= render 'shared/recurring_schedule_sub_form', main_form: f %>

<div class="row">
  <div class="small-2 columns">
    <%= f.submit class: 'button'%>
  </div>
</div>

