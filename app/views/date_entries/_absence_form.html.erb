<%= form_for([@time_sheet, @date_entry]) do |f| %>
  <% if @date_entry.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2><%= pluralize(@date_entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @date_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.check_box :first_half_day %>
    <%= f.label :first_half_day %>
  </div>

  <div class="field">
    <%= f.check_box :second_half_day %>
    <%= f.label :second_half_day %>
  </div>

  <div class="field">
    <%= f.label :time_type %><br/>
    <%= f.collection_select :time_type_id, TimeType.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.date_select :start_date %><br/>
    <%= f.date_select :end_date %>
  </div>

  <%= render 'shared/recurring_schedule_sub_form', main_form: f %>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

