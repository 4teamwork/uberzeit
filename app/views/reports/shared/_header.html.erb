<%
  selectors_to_render = [:team_selector, :group_by_selector, :time_frame_selector].select { |selector| content_for?(selector) }
  append_to_url = '' if local_assigns[:append_to_url].nil?
%>

<div class="row content-summary-header">
  <div class="small-12 columns">
    <h1><%= title %></h1>

    <%= form_tag do %>
    <div class="row">
      <div class="small-5 columns">
        <% selectors_to_render.each do |selector| %>
          <%= yield selector %>
        <% end %>
        
        <div class="row">
          <div class="small-12 columns">
            <% if selectors_to_render.any? %>
              <%= hidden_field_tag :base_url, base_url %>
              <%= hidden_field_tag :append_to_url, append_to_url %>
              <%= button_tag t('.show'), id: 'summary_header_submit', type: 'button', class: 'tiny button' %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="small-7 columns end">
        <%= render 'reports/shared/buttons' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
