<%= form_for([@time_sheet, @single_entry]) do |f| %>
  <% if @single_entry.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2><%= pluralize(@single_entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @single_entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :whole_day %>
    <%= f.check_box :whole_day %>
  </div>

  <%= f.hidden_field :start_time, value: (f.object.send(:start_time).nil? ? Time.zone.now.round : f.object.send(:start_time)).strftime("%Y-%m-%d %H:%M") %>
  <%= f.hidden_field :end_time, value: (f.object.send(:end_time).nil? ? Time.zone.now.round + 1.hour : f.object.send(:end_time)).strftime("%Y-%m-%d %H:%M") %>

  <p class="datepair" data-language="javascript">
    <input type="text" class="date start" />
    <input type="text" class="time start" /> <span class="to">to</span>
    <input type="text" class="time end" />
    <input type="text" class="date end" />
  </p>

  <div class="field">
    <%= f.label :time_type %><br />
    <%= f.collection_select :time_type_id, TimeType.all, :id, :name %>
  </div>
  
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
