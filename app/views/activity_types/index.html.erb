<div class="row">
  <div class="small-12 columns">
    <h1>
      <%= t '.title' %>
      <%= link_to fa_icon('plus') + ' ' + t('.new'), new_activity_type_path, class: 'button right' %></h3>
    </h1>

    <table class="nice small-12 edit destroy">
      <thead>
        <tr>
          <th><%= ActivityType.human_attribute_name :name %></th>
          <th><%= t '.total_activities' %></th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @activity_types.each do |activity_type| %>
          <tr>
            <td><%= activity_type.name %></td>
            <td><%= activity_type.activities.count %></td>
            <td><%= link_to fa_icon('edit'), edit_activity_type_path(activity_type), { title: t('global.actions.edit') } %></td>
            <td><%= link_to fa_icon('trash'), activity_type, method: :delete, confirm: t('.confirm_delete'), title: t('global.actions.delete') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
