<%= form_for(@adjustment) do |f| %>
<div class="row">
  <div class="small-4 columns">
    <%= f.select :user_id, User.only_active.collect { |user| [user, user.id] }, label: Adjustment.human_attribute_name(:user) %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= f.select :time_type_id, options_for_select(TimeType.all.collect{ |time_type| [time_type, time_type.id, {'data-is-absence' => time_type.is_absence?}] }, selected: f.object.time_type_id), label: Adjustment.human_attribute_name(:time_type) %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= f.text_field :label %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= datefield(f, :date, t('.date'), f.object.date, :date) %>
  </div>
</div>
<div class="row work-days">
  <div class="small-3 columns">
    <%= f.text_field :duration_in_work_days, label: Adjustment.human_attribute_name(:duration_in_work_days) %>
  </div>
</div>
<div class="row hours">
  <div class="small-3 columns">
    <%= f.text_field :duration_in_hours, label: Adjustment.human_attribute_name(:duration_in_hours) %>
  </div>
</div>
<div class="row">
  <div class="small-3 columns">
    <%= f.submit class: 'button'%>
  </div>
  <div class="small-2 columns end">
    <%= link_to t('.back'), adjustments_path, class: "secondary button" %>
  </div>
</div>
<% end %>
