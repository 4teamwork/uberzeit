<div class='event'>
  <h1>
    <%= fa_icon('flag', class: 'public-holiday-color', text: public_holiday.name).gsub('"', "'") %>
  </h1>
  <p class='date-range'><%= l public_holiday.date %></p>
  <% if absence_period(public_holiday) %>
    <p class='period'><%= absence_period(public_holiday) %></p>
  <% end %>
</div>
