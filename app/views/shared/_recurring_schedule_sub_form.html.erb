<div class="row">
  <div class="small-12 columns">
    <%= main_form.fields_for :recurring_schedule do |rs| %>

      <div class="row">
        <div class="small-3 columns">
          <%= rs.check_box :active, class: 'toggle', :'data-toggle-target' => 'recurring-form' %>
        </div>
      </div>

      <span id="recurring-form" class="<%= unless rs.object.active then 'hide' end %>">
        <h3><%= t('.recurring_schedule') %></h3>

        <%= rs.hidden_field :ends, value: 'date' %>
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix">Repeat every</span>
          </div>
          <div class="small-3 columns">
            <%= rs.text_field :weekly_repeat_interval, label: false %>
          </div>
          <div class="small-3 columns">
            <span class="postfix prefix">weeks, until</span>
          </div>
          <div class="small-3 columns">
            <%= rs.text_field :ends_date, class: :date, label: false %>
          </div>
        </div>
      </span>
    <% end %>
  </div>
</div>
