<%= form_for(@project) do |f| %>
<div class="row">
  <div class="small-4 columns">
    <%= f.text_field :name %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= f.text_field :customer_id, value: (f.object.customer.display_name if f.object.customer) %>
  </div>
</div>
<div class="row">
  <div class="small-4 columns">
    <%= f.submit class: 'button'%>
    <%= link_to t('.back'), projects_path, class: "secondary button" %>
  </div>
</div>
<% end %>


